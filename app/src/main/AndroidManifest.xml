<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ssc.sscapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SSC"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".CatalogueActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactUsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddCompActivity"
            android:parentActivityName=".CatalogueActivity" />
        <activity
            android:name=".CompanyActivity"
            android:label="@string/title_activity_company"
            android:parentActivityName=".CatalogueActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AddPartNo"
            android:parentActivityName=".CompanyActivity" />
        <activity
            android:name=".PartNoDetails"
            android:parentActivityName=".CompanyActivity" />
        <activity
            android:name=".addPartnoDetailsActivity"
            android:parentActivityName=".PartNoDetails" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".imageActivity"
            android:parentActivityName=".PartNoDetails" />
        <activity android:name=".RenameCompanyActivity"
            android:excludeFromRecents="true"
            android:parentActivityName=".CatalogueActivity"></activity>

    </application>

</manifest>