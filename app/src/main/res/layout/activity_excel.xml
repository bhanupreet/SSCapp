<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ssc.sscappadmin.Activities.ExcelActivity">

    <include
        android:id="@+id/excel_toolbar"
        layout="@layout/appbar" />

    <TextView
        android:id="@+id/excel_groupfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/ic_attach_file_black_24dp"
        android:text="Insert Group Name File"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/excel_toolbar" />

    <TextView
        android:id="@+id/excel_allparts_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/ic_attach_file_black_24dp"
        android:text="Insert All Parts File"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/excel_groupfile" />


    <Button
        android:id="@+id/excel_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
